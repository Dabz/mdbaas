	<div class="container signin-page">
			<h1 class="well">Register for MongoDB as a Service</h1>
			<div class="col-lg-12 well">
				<div class="row">
            {{#if hasErrors }}
						<div class="alert alert-danger">
							{{# each messages }}
								<p>{{this}}</p>
								{{/each}}
						</div>
 					{{/if}}
				<form action="/user/signup" method="POST">
						<div class="col-sm-12">
							<div class="row">
								<div class="col-sm-6 form-group">
									<label>First Name</label>
									<input type="text" name="first_name" value="{{first_name}}" placeholder="Enter First Name Here.." class="form-control">
								</div>
								<div class="col-sm-6 form-group">
									<label>Last Name</label>
									<input type="text" name="last_name" value="{{last_name}}" placeholder="Enter Last Name Here.." class="form-control">
								</div>
							</div>
              <div class="row">
                <div class="col-sm-6 form-group">
									<label>Email Address</label>
									<input type="text" name="email" placeholder="You@Yourdomain.com" class="form-control">
								</div>


							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<label>Password</label>
										<input name="password" type="password" placeholder="Password" class="form-control" value="" required>
									</div>
								</div>
								<div class="col-md-6">
									<label>Confirm Password</label>
									<input name="verifypassword" type="password" placeholder="Verify Password" class="form-control" value="" required>
								</div>
							</div>

							<div class="row">
                <div class="col-sm-6 form-group">
									<label>Department Name</label>
									<input type="text" name="department" placeholder="Department..." class="form-control">
								</div>
                <div class="col-sm-6 form-group">
									<label>Department Expense Code</label>
									<input type="text" name="expenseCode" placeholder="Enter Expense Code..." class="form-control">
								</div>
							</div>
						</div>
						<input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <div class="row clearfix">
              <div class="col-sm-12 form-group">
                <p class="text-center"><button type="submit" class="btn btn-lg btn-info">Submit</button></p>
                <p class="text-center">Need an account? <a href="/user/signup">Sign Up</a></p>
      					<p class="text-center">Forgot? <a href="/user/forgot">Reset</a></p>
              </div>

            </div>
					</form>

				</div>
