<div class="container">
	<div class="row">
		<div class="col-xs-4 item-photo">
			<img style="max-width:100%;" src="{{product.imagePath}}" />
		</div>
		<div class="col-xs-8" style="border:0px solid gray">
			<!-- Datos del vendedor y titulo del producto -->
			<h3>{{product.name}}</h3>
			<h5 style="color:#337ab7"><a href="#">{{product.title}}</a> Â· <small style="color:#337ab7"></small></h5>

			<!-- Precios -->
			<h6 class="title-price"><small>Base Hourly Price</small></h6>
			<h3 style="margin-top:0px;">${{product.price}}</h3>
      <small>{{product.deploymentNotes}}</small>
			<!-- Detalles especificos del producto -->
			<div class="section">
				<h6 class="title-attr" style="margin-top:15px;"><small>Project Name</small></h6>
					<input type="text" class='form-control' name='project'>

			</div>
      <div class="section">
        <h6 class="title-attr" style="margin-top:15px;"><small>Expense Code</small></h6>
          <input type="text" class='form-control' name='expenseCode' value='{{user.expenseCode}}'>

      </div>
      <div class="section" style="padding-bottom:5px;">
				<h6 class="title-attr"><small>Memory</small></h6>
				<div>
					<div class="attr2">2 GB</div>
					<div class="attr2">4 GB</div>
				</div>
			</div>
			<div class="section" style="padding-bottom:20px;">
				<h6 class="title-attr"><small>Storage (GB)</small></h6>
				<div>
					<div class="btn-minus"><span class="glyphicon glyphicon-minus"></span></div>
					<input value="6" />
					<div class="btn-plus"><span class="glyphicon glyphicon-plus"></span></div>
				</div>
			</div>

			<div class="section" style="padding-bottom:20px;">
				<button class="btn btn-success"><span style="margin-right:20px" class="fa fa-rocket" aria-hidden="true"></span>Launch Instance</button>
				<h6><a href="#"><span class="glyphicon glyphicon-heart-empty" style="cursor:pointer;"></span> Favorite</a></h6>
			</div>
		</div>
	</div>
</div>
