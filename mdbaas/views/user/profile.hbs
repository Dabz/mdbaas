<div class="container">
	<div class="row">
		{{#if hasErrors }}
			<div class="alert alert-danger">
				{{# each message }}
					<p>{{this}}</p>
					{{/each}}
			</div>
		{{/if}}
		<div class="col-sm-12">
			<div class="text-center row">
				{{#if user.profile.picture}}
					<img class="img-circle" src="{{user.profile.picture}}">
				{{else}}
					<img width="150" class="img-circle" src="/images/unknown_user.png">
				{{/if}}
				
			</div>
		</div>
		<ul class="nav nav-tabs">
			<li class="active"><a href="/user/profile">Account Details</a></li>
			<li CLASS="info"><a href="/user/orders">Orders</a></li>
		</ul>

		<form action="/user/update-profile" method="POST">

			<div class="col-sm-12 well">
				<div class="row ">
					<div class="col-sm-6 form-group">
						<label>First Name</label>
						<input type="text" value="{{user.first_name}}" name="first_name" placeholder="" class="form-control">
					</div>
					<div class="col-sm-6 form-group">
						<label>Last Name</label>
						<input type="text" value="{{user.last_name}}" name="last_name" placeholder="" class="form-control">
					</div>
				</div>

				<div class="form-group">
					<label>Email Address</label>
					<input type="text" value="{{user.email}}" placeholder="Enter Email Address Here.." disabled class="form-control">
				</div>
				<div class="row">
				<div class="col-sm-6 form-group">
					<label>Department</label>
					<input type="text" value="{{user.department}}" name="department" placeholder="" class="form-control">
				</div>
				<div class="col-sm-6 form-group">
					<label>Expense Code</label>
					<input type="text" value="{{user.expenseCode}}" name="expenseCode" placeholder="" class="form-control">
				</div>
			</div>
				<input type="hidden" name="_csrf" value="{{ csrfToken }}">
				<input type="hidden" name="csrfToken" value="{{csrfToken}}">
				<div class='col-md-6'>
					<button type="submit" class="btn btn-lg btn-info">Submit</button>
				</div>
				<div class='col-md-6'>
					<a href='/user/logout-and-delete' class="btn btn-lg btn-warning">Delete User Account and Logout</a>
				</div>
			</div>
		</form>

	</div>
</div>
